<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:fontFamily="sans-serif"
    >

    <!-- Row # 1 -->
    <Button
        android:id="@+id/btnClear"
        android:layout_row="0"
        android:layout_rowWeight="0.5"
        android:layout_column="0"
        android:layout_columnWeight="0.5"
        android:background="@color/colorBtnNumberBG"
        android:fontFamily="sans-serif-light"
        android:text="C"
        android:textColor="@color/colorBtnOperatorTEXT"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnPercentage"
        android:layout_row="0"
        android:layout_rowWeight="0.5"
        android:layout_column="2"
        android:layout_columnWeight="0.5"
        android:background="@color/colorBtnNumberBG"
        android:fontFamily="sans-serif-light"
        android:text="%"
        android:textColor="@color/colorBtnOperatorTEXT"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_row="0"
        android:layout_rowWeight="0.5"
        android:layout_column="3"
        android:layout_columnWeight="0.5"
        android:background="@color/colorBtnNumberBG"
        android:fontFamily="sans-serif-light"
        android:text="÷"
        android:textColor="@color/colorBtnOperatorTEXT"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnBackspace"
        android:layout_row="0"
        android:layout_rowWeight="0.5"
        android:layout_column="1"
        android:layout_columnWeight="0.5"
        android:background="@color/colorBtnNumberBG"
        android:fontFamily="sans-serif-light"
        android:text="⌫"
        android:textColor="@color/colorBtnOperatorTEXT"
        android:textSize="25sp" />

    <!-- Row # 2 -->
    <Button
        android:id="@+id/btnSeven"
        android:layout_row="1"
        android:layout_rowWeight="0.5"
        android:layout_column="0"
        android:layout_columnWeight="0.5"
        android:background="@color/colorBtnNumberBG"
        android:fontFamily="sans-serif-light"
        android:text="7"
        android:textColor="@color/colorBtnNumberTEXT"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnEight"
        android:layout_row="1"
        android:layout_rowWeight="0.5"
        android:layout_column="1"
        android:layout_columnWeight="0.5"
        android:background="@color/colorBtnNumberBG"
        android:fontFamily="sans-serif-light"
        android:text="8"
        android:textColor="@color/colorBtnNumberTEXT"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnNine"
        android:layout_row="1"
        android:layout_rowWeight="0.5"
        android:layout_column="2"
        android:layout_columnWeight="0.5"
        android:background="@color/colorBtnNumberBG"
        android:fontFamily="sans-serif-light"
        android:text="9"
        android:textColor="@color/colorBtnNumberTEXT"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnMultiply"
        android:layout_row="1"
        android:layout_rowWeight="0.5"
        android:layout_column="3"
        android:layout_columnWeight="0.5"
        android:background="@color/colorBtnNumberBG"
        android:fontFamily="sans-serif-light"
        android:text="×"
        android:textColor="@color/colorBtnOperatorTEXT"
        android:textSize="40sp" />

    <!-- Row # 3 -->
    <Button
        android:id="@+id/btnFour"
        android:layout_row="2"
        android:layout_rowWeight="0.5"
        android:layout_column="0"
        android:layout_columnWeight="0.5"
        android:background="@color/colorBtnNumberBG"
        android:fontFamily="sans-serif-light"
        android:text="4"
        android:textColor="@color/colorBtnNumberTEXT"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnFive"
        android:layout_row="2"
        android:layout_rowWeight="0.5"
        android:layout_column="1"
        android:layout_columnWeight="0.5"
        android:background="@color/colorBtnNumberBG"
        android:fontFamily="sans-serif-light"
        android:text="5"
        android:textColor="@color/colorBtnNumberTEXT"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnSix"
        android:layout_row="2"
        android:layout_rowWeight="0.5"
        android:layout_column="2"
        android:layout_columnWeight="0.5"
        android:background="@color/colorBtnNumberBG"
        android:fontFamily="sans-serif-light"
        android:text="6"
        android:textColor="@color/colorBtnNumberTEXT"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_row="3"
        android:layout_rowWeight="0.5"
        android:layout_column="3"
        android:layout_columnWeight="0.5"
        android:background="@color/colorBtnNumberBG"
        android:fontFamily="sans-serif-light"
        android:text="+"
        android:textColor="@color/colorBtnOperatorTEXT"
        android:textSize="40sp" />


    <!-- Row # 4 -->
    <Button
        android:id="@+id/btnOne"
        android:layout_row="3"
        android:layout_rowWeight="0.5"
        android:layout_column="0"
        android:layout_columnWeight="0.5"
        android:background="@color/colorBtnNumberBG"
        android:fontFamily="sans-serif-light"
        android:text="1"
        android:textColor="@color/colorBtnNumberTEXT"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnTwo"
        android:layout_row="3"
        android:layout_rowWeight="0.5"
        android:layout_column="1"
        android:layout_columnWeight="0.5"
        android:background="@color/colorBtnNumberBG"
        android:fontFamily="sans-serif-light"
        android:text="2"
        android:textColor="@color/colorBtnNumberTEXT"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnThree"
        android:layout_row="3"
        android:layout_rowWeight="0.5"
        android:layout_column="2"
        android:layout_columnWeight="0.5"
        android:background="@color/colorBtnNumberBG"
        android:fontFamily="sans-serif-light"
        android:text="3"
        android:textColor="@color/colorBtnNumberTEXT"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_row="2"
        android:layout_rowWeight="0.5"
        android:layout_column="3"
        android:layout_columnWeight="0.5"
        android:background="@color/colorBtnNumberBG"
        android:fontFamily="sans-serif-light"
        android:text="-"
        android:textColor="@color/colorBtnOperatorTEXT"
        android:textSize="40sp" />

    <!-- Row # 5 -->
    <Button
        android:id="@+id/btnDecimal"
        android:layout_row="4"
        android:layout_rowWeight="0.5"
        android:layout_column="0"
        android:layout_columnWeight="0.5"
        android:background="@color/colorBtnNumberBG"
        android:fontFamily="sans-serif-light"
        android:text="."
        android:textColor="@color/colorBtnNumberTEXT"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnZero"
        android:layout_row="4"
        android:layout_rowWeight="0.5"
        android:layout_column="1"
        android:layout_columnWeight="0.5"
        android:background="@color/colorBtnNumberBG"
        android:fontFamily="sans-serif-light"
        android:text="0"
        android:textColor="@color/colorBtnNumberTEXT"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnDoubleZero"
        android:layout_row="4"
        android:layout_rowWeight="0.5"
        android:layout_column="2"
        android:layout_columnWeight="0.5"
        android:background="@color/colorBtnNumberBG"
        android:fontFamily="sans-serif-light"
        android:text="00"
        android:textColor="@color/colorBtnNumberTEXT"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_row="4"
        android:layout_rowSpan="2"
        android:layout_rowWeight="0.5"
        android:layout_column="3"
        android:layout_columnWeight="0.5"
        android:background="@color/colorBtnNumberBG"
        android:fontFamily="sans-serif-light"
        android:backgroundTint="@color/colorBtnOperatorTEXT"
        android:text="="
        android:textColor="@color/colorBtnOperatorBG"
        android:textSize="40sp" />


</GridLayout>